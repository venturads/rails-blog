<div class="container">
<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="container" align="center">
    <a href="<%= @profile.image %>"><%= image_tag @profile.image(:medium), :class => 'img-responsive' %></a>
  <p><strong><%= model_class.human_attribute_name(:username) %>:</strong>
  <%= @profile.username %></p>
  <p><strong><%= model_class.human_attribute_name(:bio) %>:</strong>
  <%= @profile.bio %></p>
  <p><strong><%= model_class.human_attribute_name(:gender) %>:</strong>
  <%= @profile.gender %></p>
  <p><strong><%= model_class.human_attribute_name(:city) %>:</strong>
  <%= @profile.city %></p>
  <p><strong><%= model_class.human_attribute_name(:state) %>:</strong>
  <%= @profile.state %></p>
     
    <%= link_to t('.back', :default => t("helpers.links.back")),
                  profiles_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_profile_path(@profile), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  profile_path(@profile),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>


</div>
</div>